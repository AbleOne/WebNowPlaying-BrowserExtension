{
  "manifest_version": 2,

  "name": "WebNowPlaying Companion",
  "short_name": "WebNowPlaying",
  "description": "Ever wished music info from your web browser could be used in Rainmeter? Well now it can!",
  "version": "0.4.0",
  "icons":
  {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action":
  {},
  "permissions": [
    "tabs",
    "webNavigation",
    "storage"
  ],
  "background":
  {
    "scripts": ["Background.js"],
    "persistent": false
  },
  "options_ui":
  {
    "page": "options.html"
  },
  "content_scripts": [
  {
    "matches": [
      "*://play.google.com/music/*"
    ],
    "js": [
      "WebNowPlaying.js",
      "Websites/GooglePlayMusic.js"
    ]
  },
  {
    "matches": [
      "*://www.youtube.com/*"
    ],
    "js": [
      "WebNowPlaying.js",
      "Websites/Youtube.js",
      "Websites/YoutubeNew.js",
      "Websites/YoutubeTV.js",
      "Websites/YoutubeSelector.js"
    ]
  },
  {
    "matches": [
      "*://soundcloud.com/*"
    ],
    "js": [
      "WebNowPlaying.js",
      "Websites/Soundcloud.js"
    ]
  },
  {
    "matches": [
      "*://listen.tidal.com/*"
    ],
    "js": [
      "WebNowPlaying.js",
      "Websites/Tidal.js"
    ]
  },
  {
    "matches": [
      "*://music.amazon.com/*"
    ],
    "js": [
      "WebNowPlaying.js",
      "Websites/AmazonMusic.js"
    ]
  },
  {
    "matches": [
      "*://www.pandora.com/*"
    ],
    "js": [
      "WebNowPlaying.js",
      "Websites/Pandora.js"
    ]
  },
  {
    "matches": [
      "*://open.spotify.com/*"
    ],
    "js": [
      "WebNowPlaying.js",
      "Websites/Spotify.js"
    ]
  },
  {
    "matches": [
      "*://www.deezer.com/*"
    ],
    "js": [
      "WebNowPlaying.js",
      "Websites/Deezer.js"
    ]
  },
  {
    "matches": [
      "*://play.pocketcasts.com/*"
    ],
    "js": [
      "WebNowPlaying.js",
      "Websites/PocketCasts.js"
    ]
  },
  {
    "matches": [
      "*://app.plex.tv/*"
    ],
    "js": [
      "WebNowPlaying.js",
      "Websites/Plex.js"
    ]
  },
  {
    "matches": [
      "<all_urls>"
    ],
    "exclude_matches": [
      "*://play.google.com/music/*",
      "*://www.youtube.com/*",
      "*://soundcloud.com/*",
      "*://listen.tidal.com/*",
      "*://music.amazon.com/*",
      "*://www.pandora.com/*",
      "*://open.spotify.com/*",
      "*://www.deezer.com/*",
      "*://play.pocketcasts.com/*",
      "*://app.plex.tv/*"
    ],
    "js": [
      "WebNowPlaying.js",
      "Websites/Generic.js"
    ]
  }]
}
